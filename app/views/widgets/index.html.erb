<h1>Listing widgets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @widgets.each do |widget| %>
  <tr>
    <td><h3><%= link_to widget.name, widget %></h3></td>
  </tr>
  <tr>
    <td><%= widget.url %></td>
  </tr>
  <tr>
    <td>
      Copy and paste the following where you want your UNSWTV viewer to appear.<br />
      <%= text_field "widget_id", widget.id, "value" => widget.code, :size => 80%>
    </td>
  </tr>
  <tr>
    <td><%= link_to 'Show', widget %></td>
    <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
    <td><%= link_to 'Destroy', widget, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Widget', new_widget_path %>

